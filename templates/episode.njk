---
pagination:
    data: episodes
    size: 1
    alias: episode
permalink: '/show-notes/{{ episode.attributes.slug }}/index.html'
---

{% extends "app.njk" %}
{% block css %}
    <link rel="stylesheet" href="/stylesheets/episode.css"/>
{% endblock %}
{% block content %}
    <h1 class="episode-title">
        {{ episode.attributes | fullTitle }}
    </h1>
    {{ episode.attributes | formatNotes | safe }}
{% endblock %}