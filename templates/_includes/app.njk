<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/stylesheets/index.css"/>
        <link rel="stylesheet" href="/stylesheets/font.css"/>
        <link rel="stylesheet" href="/stylesheets/app.css"/>
        {% block css %}{% endblock %}
        <style>
            {% block headerStyle %}
                {{ headers.randomHeaders[0].url | headerImageStyle}}
            {% endblock %}
        </style>
        <script src="/js/app.js"></script>
        {% block script %}{% endblock %}
        <title>{{ textDefaults.siteTitle }}</title>
    </head>
    <body>

        <div id="hamburger">
            {% include "../icon/list.svg" %}
        </div>
        
        <a href="/" id="logo">
            {% include "../img/banner-logo.svg" %}
        </a>
        
        <div
            id="header-banner"
            class="{{ headers.randomHeaders[0].textStyle }}"
        >
            {% block headerText %}{% endblock %}
        </div>
        
        <div id="sidebar" class="collapsed">
            <nav id="sidebar-buttons" aria-label="Main Navigation">
                <a href="/subscribe">Subscribe</a>
                <a href="/store">Store</a>
                <a href="/support">Support</a>
                <a href="/about">About and Contact</a>
            </nav>
            <p id="sidebar-text">
                {{ textDefaults.sidebarText }}
            </p>
        </div>
        
        <div id="content">
            {% block content %}
                {{ content | safe }}
            {% endblock %}
        </div>
        
        <div id="footer">
                {% include "license.html" %}
        </div>
        
    </body>
</html>