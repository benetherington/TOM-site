---
layout: app.njk
pagination:
    data: episodes
    size: 10
---

{% for episode in pagination.items %}
    <div class="episode-card">
        <a class="episode-title" href={{ "/show-notes/" + episode.attributes.slug | url }}>
            {{ episode.attributes | fullTitle }}
        </a>
        <p class="published-at">{{ episode.attributes.publishedAt | shortDate }}</p>
        <p class="description">{{ episode.attributes.description }}</p>
    </div>
{% endfor %}