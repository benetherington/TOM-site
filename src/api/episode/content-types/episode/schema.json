{
    "kind": "collectionType",
    "collectionName": "episodes",
    "info": {
        "singularName": "episode",
        "pluralName": "episodes",
        "displayName": "Episode",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "ep_num": {
            "type": "integer",
            "required": true,
            "unique": true,
            "min": 0
        },
        "title": {
            "type": "string",
            "unique": true
        },
        "slug": {
            "type": "string",
            "unique": true,
            "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "description": {
            "type": "text",
            "maxLength": 150
        },
        "show_notes": {
            "type": "richtext"
        },
        "audio": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["audios"]
        },
        "attachments": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::attachment.attachment"
        },
        "topics": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::topic.topic",
            "inversedBy": "episodes"
        }
    }
}
